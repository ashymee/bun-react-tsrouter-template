{
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": true,
    "strictNullChecks": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "module": "Preserve",
    "target": "ESNext",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "downlevelIteration": true,
    "noEmit": true,
    "types": ["bun-types"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "prettier.config.js"],
  "exclude": ["dist", "node_modules"]
}
